pipeline {
    agent any
    stages {
        stage('Checkout sources from GitHub') {
            steps {
                git branch: 'master',
                    url: 'https://github.com/IzhevskCodeBattle/codebattle-game-battlecity'
            }
        }

/*      Needs to be run only once to create base image */
//        stage('Build base image for codebattle-server') {
//            steps {
//                sh 'docker build --no-cache -t izhevsk-code-battle/codebattle-server-src -f dockerfile/codebattle-server .'
//            }
//        }

        stage('Build Docker-image for codebattle-server') {
            steps {
                sh 'docker build --no-cache -t izhevsk-code-battle/codebattle-deploy-local -f dockerfile/codebattle-deploy-local .'
            }
        }

        stage('Stop current codebattle-server') {
            steps {
               sh 'docker ps -a -q --filter name=codebattle-server --format="{{.ID}}" | xargs -r docker stop'
            }
        }

        stage('Run codebattle-server') {
            steps {
                sh 'docker run -d -p 8080:8080 --rm --name codebattle-server izhevsk-code-battle/codebattle-deploy-local:latest'
            }
        }

    }
}
